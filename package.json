{
  "name": "turborepo-basic-shared",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test --parallel",
    "dev": "turbo run dev --parallel",
    "lint": "npx eslint --ext .ts packages/**/*.ts libs/**/*.ts",
    "lint:fix": "npx eslint --fix --ext .ts packages/**/*.ts libs/**/*.ts",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "prettier": "^2.5.1",
    "turbo": "^1.0.23",
    "typescript": "^4.5.4"
  },
  "turbo": {
    "npmClient": "pnpm",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      },
      "test": {
        "dependsOn": [
          "build",
          "@satont/grammy-storage-utils#build"
        ]
      }
    }
  },
  "engines": {
    "pnpm": ">=6.24.1",
    "node": ">=12.0.0"
  }
}
